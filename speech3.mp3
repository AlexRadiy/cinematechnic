@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

body {
  margin: 0;
  overflow: hidden;
  font-family: 'Press Start 2P', sans-serif;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

#overlay {
  position: fixed;
  left: 50%;
  bottom: 2vh;
  transform: translateX(-50%);

  background: #0000009d;
  border: 2px solid #ffffff6e;
  border-radius: 0;
  color: #fff;
  text-align: center;

  width: 90vw;
  max-width: 570px;
  min-width: 220px;
  height: auto;
  max-height: 80vh;
  min-height: 200px;
  padding: 3vw 2vw;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

  z-index: 1000;
  overflow: auto;

  font-size: 20px;
}

#blackOverlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0;
  transition: opacity 2s ease; /* fade duration */
  pointer-events: none;
  z-index: 9999;
}

@media (max-width: 600px), (max-height: 600px) {
  #overlay {
    padding: 6vw 2vw;
    font-size: 12px;
    max-width: 98vw;
    max-height: 90vh;
  }
}

#buttons button {
  margin-top: 20px;
  padding: 10px 20px;
  background: #fff;
  color: #000;
  border: 2px solid #fff;
  font-family: 'Press Start 2P', sans-serif;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.2s ease;
  max-width: 95vw;
  word-break: break-word;
}

#buttons button:hover {
  background: #000;
  color: #fff;
  border: 2px solid #fff;
}

#overlay .overlay-input {
  width: 100%;
  max-width: 440px;
  min-width: 120px;
  padding: 14px 16px;
  font-family: 'Press Start 2P', sans-serif;
  font-size: 17px;
  line-height: 1.2;
  border: 2px solid #fff;
  background: #000;
  color: #fff;
  box-sizing: border-box;
  margin-top: 12px;
  height: auto;          
  min-height: 48px;
  max-height: calc(1.2em * 4 + 32px); 
  overflow-y: auto;
  resize: none;
}

#overlay .overlay-input::placeholder {
  color: #bbb;
  opacity: 1;
}



@media (max-width: 600px), (max-height: 600px) {
  #overlay .overlay-input {
    font-size: 12px;
    padding: 10px 8px;
    height: 38px;
    max-width: 98vw;
  }
  #buttons button {
    font-size: 12px;
    padding: 8px 12px;
  }
}

/* ===== Carousel styles ===== */
#carousel {
  width: 100%;
  max-width: 570px;
  display: flex;
  align-items: center;
  gap: 0px;
  margin-top: 0px;
}

#carousel, .viewport, .inner, .carousel-screen {
  box-sizing: border-box;
}

#carousel .nav-btn {
  flex: 0 0 auto;
  padding: 28px 10px;
  background: #000;
  color: #fff;
  border: 2px solid #fff;
  font-family: 'Press Start 2P', sans-serif;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

#carousel .nav-btn:hover {
  background: #fff;
  color: #000;
}

#carousel .nav-btn:disabled {
  opacity: 0.4;
  cursor: default;
}

#carousel .viewport {
  position: relative;
  flex: 1 1 auto;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  -ms-overflow-style: none;  /* IE/Edge */
  scrollbar-width: none;     /* Firefox */
  scroll-snap-type: x mandatory;
  scroll-padding-inline: 50%;
}

#carousel .viewport::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

#carousel .inner {
  display: flex;
  gap: 220px;
  padding: 20px;
}

#carousel .inner > button {
  flex: 0 0 auto;
  min-width: 180px;
  padding: 20px 16px;
  border: 2px solid #fff;
  background: #000;
  color: #fff;
  font-family: 'Press Start 2P', sans-serif;
  font-size: 29px;
  cursor: pointer;
  transition: all 0.2s ease;
  scroll-snap-align: center;
}

#carousel .inner > button:hover {
  background: #fff;
  color: #000;
}

/* ===== Overlay text styles ===== */


#overlay .overlay-subtext {
  margin-top: 10px;
  font-size: clamp(18px, 3vw, 28px);
  line-height: 1;
  color: #fff;
}

#overlay .overlay-subtext[hidden] {
  display: none;
}

@media (max-width: 600px), (max-height: 600px) {
  #carousel .nav-btn {
    font-size: 12px;
    padding: 8px 10px;
  }
  #carousel .inner > button {
    min-width: 150px;
    font-size: 12px;
    padding: 8px 12px;
  }
  #overlay .overlay-subtext {
    font-size: clamp(16px, 4vw, 22px);
  }
}